<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings -->
        <property name="connection.url">jdbc:mysql://127.0.0.1:3306/iodb?allowPublicKeyRetrieval=true&amp;useSSL=false&amp;serverTimezone=UTC&amp;useLegacyDatetimeCode=false</property>
        <property name="connection.username">root</property>
        <property name="connection.password">admin123</property>
        <property name="show_sql">true</property>


        <mapping class="com.example.backend.model.User" />
        <mapping class="com.example.backend.model.BankAccount"/>

    </session-factory>
</hibernate-configuration>